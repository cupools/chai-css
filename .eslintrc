{
  "root": true,  
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "node": true,
    "commonjs": true
  },
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "prefer-const": 0,
    "no-use-before-define": 0,
    "arrow-parens": 0,
    "prefer-template": 0,
    "no-mixed-operators": 0,
    "no-underscore-dangle": 0,

    "import/no-unresolved": 0
  }
}